<p id="notice"><%= notice %></p>

<h1>Listing Facturas</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Vendedor</th>
      <th>Valor</th>
      <th>Num productos</th>
      <th>Descuento</th>
      <th>Fecha</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><%= factura.cliente %></td>
        <td><%= factura.vendedor %></td>
        <td><%= factura.valor %></td>
        <td><%= factura.num_productos %></td>
        <td><%= factura.descuento %></td>
        <td><%= factura.fecha %></td>
        <td><%= link_to 'Show', factura %></td>
        <td><%= link_to 'Edit', edit_factura_path(factura) %></td>
        <td><%= link_to 'Destroy', factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

